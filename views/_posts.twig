{% for p in posts %}

  <article class="post-tease">
    {# if has featured image #}
    {% if p.thumbnail %}
      <img src="{{ p.thumbnail.src('thumbnail') }}" alt="{{ p.title }}">
    {% endif %}

    <a href="{{ p.link }}">
      <h3>{{ p.title }}</h3>
      <p> {{ p.preview.length(25) }} </p>
    </a>

    <p>
      Written by {{ post.author.display_name }} on <time>{{ post.post_date | date }}</time>
    </p>
  </article>

{# If no posts found #}
{% else %}

  <article class="content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </article>

{% endfor %}
