{% for p in posts %}

  <article class="post-tease">
    
    <h3>
      <a href="{{ p.link }}"> {{ p.title }} </a>
    </h3>

    {# if has featured image #}
    {% if p.thumbnail %}
      <img src="{{ p.thumbnail.src('thumbnail') }}" alt="{{ p.title }}">
    {% endif %}
    
    <p> {{ p.preview.length(25) }} </p>

    <p>
      Written by {{ p.author.display_name }} on <time>{{ p.post_date | date }}</time>
    </p>
  </article>

{# If no posts found #}
{% else %}

  <article class="content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </article>

{% endfor %}
